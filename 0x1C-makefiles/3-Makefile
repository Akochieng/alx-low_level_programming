CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM := rm -f

all: school

school: verify-OBJ $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

verify-OBJ:
	@if [ "$(OBJ)" != "$(SRC:.c=.o)" ]; then \
		$(RM) $(OBJ); \
		$(MAKE) $(SRC:.c=.o); \
	fi

re: $(SRC)
	$(CC) -c $(SRC)

clean:
	-$(RM) .*.swp *~ $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean:
	-$(RM) .*.swp *~ $(NAME) $(OBJ)
